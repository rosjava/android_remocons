<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="1. Table No : "
	        android:textColor="#000000"/>
	    <EditText 
	        android:id="@+id/table"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#000000"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="2. SSID : "
	        android:textColor="#000000"/>
	    <EditText 
	        android:id="@+id/ssid"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="desertstorm"
	        android:textColor="#000000"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="3. Password : "
	        android:textColor="#000000"/>
	    <EditText 
	        android:id="@+id/pasword"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="1234"
	        android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="4. Master URI : "
	        android:textColor="#000000"/>
	    <EditText 
	        android:id="@+id/master_uri"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="http://localhost:11311/"
	        android:textColor="#000000"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="5. Cafe Link : "
	        android:textColor="#000000"/>
	    <EditText 
	        android:id="@+id/web_link"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="http://update.yujinrobot.com/isyou/nfctest.asp"
	        android:textColor="#000000"/>
    </LinearLayout>
    
    <TextView 
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Nfc tag is not found."
        android:textColor="#00ff00"
        android:layout_margin="5dp"/>
    
    <Button 
        android:id="@+id/nfc_write"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Wrte to NFC Tag"
        android:textColor="#000000"
        android:layout_margin="5dp"
        android:enabled="false"
        android:onClick="onClick"/>
    
</LinearLayout>